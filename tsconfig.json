{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES5",
        "module":"CommonJS",
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "compiled/types",
        "outDir": "compiled",
        "allowUnreachableCode": false,
        "typeRoots": [
          "node_modules/@types"
        ]
    },
    "include": [
        "index.ts",
        "src"
    ]
}
